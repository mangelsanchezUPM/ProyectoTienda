@model IEnumerable<ProyectoTienda.Product>

@{
    ViewBag.Title = "Productos";
}
<br />
<h2>Productos</h2>
<br />
<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
        <div class="item text-center">
            <div class="row">
                @if (product.Image != null)
                {
                    <img src="~/assets/images/@product.Image" max-width="200px" class="img-responsive img-thumbnail" alt="@product.Name" />

                }
                else
                {
                    <img src="~/assets/noImage.jpg" max-width="200px" class="img-responsive img-thumbnail" alt="@product.Name" />

                }
            </div>
            <div class="row">
                <div class="row">
                    <h4>@product.Name</h4>
                </div>
                <div class="row"><h4>@product.Price €</h4></div>
                @if (product.Price > 0)
                {
                    <div class="row">
                        <a href='@Url.Action("Add", "cart", new { id = product.Id })'>
                            <button class="btn btn-danger"><i class="fa fa-shopping-cart"></i> Añadir al carrito</button>
                        </a>        
                    </div>
                }
                else
                {
                    <div class="row"><button disabled class="btn btn-danger"><i class="fa fa-shopping-cart"></i> Sin stock</button></div>

                }
            </div>
        </div>
        }
    </div>
</div>

